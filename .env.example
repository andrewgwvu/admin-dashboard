# Database Configuration
DB_USER=homelab
DB_PASSWORD=your-secure-password-here
REDIS_PASSWORD=your-redis-password-here

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# JumpCloud Configuration
JUMPCLOUD_API_KEY=your-jumpcloud-api-key
JUMPCLOUD_ORG_ID=your-jumpcloud-org-id

# Okta Configuration
OKTA_DOMAIN=your-domain.okta.com
OKTA_API_TOKEN=your-okta-api-token

# Active Directory Configuration
# For Server 2022+, use LDAPS (port 636) - channel binding is required
# AD_URL=ldaps://your-ad-server.local:636
# For older servers (2019 and below), you can use LDAP (port 389)
# AD_URL=ldap://your-ad-server.local:389
# Or use IP address if hostname resolution doesn't work in Docker
AD_URL=ldaps://192.168.1.100:636
AD_BASE_DN=DC=your,DC=domain,DC=local
AD_USERNAME=CN=Service Account,CN=Users,DC=your,DC=domain,DC=local
AD_PASSWORD=your-ad-service-account-password

# TP-Link Omada Configuration
OMADA_URL=https://your-omada-controller:8043
OMADA_USERNAME=your-omada-username
OMADA_PASSWORD=your-omada-password
OMADA_SITE_ID=your-site-id

# Frontend Configuration
VITE_API_URL=http://localhost:3001
